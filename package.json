{
  "name": "completion-stage",
  "version": "1.0.0",
  "description": "A port of Java's CompletionStage",
  "homepage": "https://github.com/robtimus/completion-stage",
  "bugs": {
    "url": "https://github.com/robtimus/completion-stage/issues"
  },
  "license": "Apache-2.0",
  "author": "Rob Spoor",
  "files": [
    "lib/**/*"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/robtimus/completion-stage.git"
  },
  "scripts": {
    "build": "npm run format && npm run lint && npm run compile",
    "compile": "tsc",
    "lint": "eslint ./src/**",
    "format": "prettier --write \"**/*.+(json|ts|tsx)\"",
    "typedoc": "typedoc src",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^10.17.60",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.26.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "ts-jest": "^26.5.6",
    "typedoc": "^0.20.36",
    "typescript": "^4.2.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "printWidth": 999
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
