{
  "name": "completion-stage",
  "version": "1.0.0",
  "description": "A port of Java's CompletionStage using promises",
  "homepage": "https://github.com/robtimus/completion-stage",
  "bugs": {
    "url": "https://github.com/robtimus/completion-stage/issues"
  },
  "license": "Apache-2.0",
  "author": "Rob Spoor",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/robtimus/completion-stage.git"
  },
  "scripts": {
    "compile": "tsc",
    "lint": "eslint ./src/**",
    "format": "prettier --write \"**/*.+(json|ts|tsx)\"",
    "format:check": "prettier --check \"**/*.+(json|ts|tsx)\"",
    "build": "npm run format:check && npm run lint && npm run compile",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^10.17.60",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "jest": "^29.6.0",
    "prettier": "^2.8.8",
    "ts-jest": "^29.1.1",
    "typescript": "^4.9.5"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ]
  },
  "prettier": {
    "printWidth": 999
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
